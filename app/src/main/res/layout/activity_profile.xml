<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundColor"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/UserDP"
        android:layout_width="191dp"
        android:layout_height="175dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/profiledp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/changedp"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/send_button"
        style="@style/camera"
        android:contentDescription="@string/Change_Dp"
        app:layout_constraintEnd_toEndOf="@+id/UserDP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UserDP"
        app:layout_constraintTop_toTopOf="@+id/UserDP"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@id/Username"
        style="@style/Profile"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:hint="Username"
        android:paddingLeft="60dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserDP" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="@+id/Username"
        app:layout_constraintEnd_toStartOf="@+id/edit_username"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/Username"
        app:layout_constraintTop_toTopOf="@+id/Username"
        style="@style/IconColor" />

    <ImageButton
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Edit_username"
        android:src="@drawable/write"
        style="@style/write"
        app:layout_constraintBottom_toBottomOf="@+id/Username"
        app:layout_constraintEnd_toEndOf="@+id/Username"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="@+id/Username"
        app:layout_constraintTop_toTopOf="@+id/Username"
        app:layout_constraintVertical_bias="0.529"
        tools:ignore="TouchTargetSizeCheck"
        android:onClick="onEditUsernameClick" />

    <TextView
        android:id="@+id/Useremail"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:textSize="17sp"
        android:paddingLeft="60dp"
        android:paddingTop="18dp"
        style="@style/Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email"
        style="@style/IconColor"
        app:layout_constraintBottom_toBottomOf="@+id/Useremail"
        app:layout_constraintEnd_toEndOf="@+id/Useremail"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/Useremail"
        app:layout_constraintTop_toTopOf="@+id/Useremail"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/link_to_forum"
        style="@style/TextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Proceed to the forum page"
        android:textSize="17sp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Usertype" />


    <TextView
        android:id="@+id/Usertype"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Type"
        android:textSize="17sp"
        android:paddingLeft="60dp"
        android:paddingTop="18dp"
        style="@style/Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Useremail" />

    <ImageView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/type"
        style="@style/IconColor"
        app:layout_constraintBottom_toBottomOf="@+id/Usertype"
        app:layout_constraintEnd_toEndOf="@+id/Usertype"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/Usertype"
        app:layout_constraintTop_toTopOf="@+id/Usertype"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/User_mode"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:paddingLeft="60dp"
        android:paddingTop="18dp"
        style="@style/mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Usertype" />

    <ImageView
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/img_mode"
        app:layout_constraintBottom_toBottomOf="@+id/User_mode"
        app:layout_constraintEnd_toEndOf="@+id/User_mode"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/User_mode"
        app:layout_constraintTop_toTopOf="@+id/User_mode"
        app:layout_constraintVertical_bias="0.527" />

</androidx.constraintlayout.widget.ConstraintLayout>

