<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiniProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/Dark_Charcoal</item>
    </style>
    <style name="BackgroundColor"><item name="android:background">@color/Ink_Black</item></style>
    <style name="TextColor"><item name="android:textColor">@color/white</item></style>
    <style name="ButtonBackground"><item name="android:background">@drawable/msg_input_dark</item></style>
    <style name="LinkColor"><item name="android:textColor">@color/Silver_Grey</item></style>
    <style name="WhiteColor"><item name="android:backgroundTint">@color/black</item></style>
    <style name="ForumTheme"><item name="android:background">@color/Dark_Gunmetal</item></style>
    <style name="IconColor"><item name="android:tint">@color/white</item></style>
    <style name="MessageInputBackground"><item name="android:background">@drawable/msg_input_night</item>
        <item name="android:src">@drawable/send_night</item></style>
    <style name="Profile">
        <item name="android:background">@drawable/username_bg_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="write">
        <item name="android:backgroundTint">@color/Dark_Charcoal</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="camera">
        <item name="android:backgroundTint">@color/Dark_Charcoal</item>
        <item name="android:src">@drawable/changedp_night</item>
    </style>
    <style name="dp">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="PasswordField">
        <item name="android:background">@drawable/border_night</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SearchBackground">
        <item name="android:background">@drawable/search_input_night</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Calls">
        <item name="android:background">@drawable/calls_input_night</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="add_link_bg">
        <item name="android:background">@drawable/add_link_background_night</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg_night</item>
        <item name="colorPrimary">@color/Dark_Gunmetal</item>
    </style>
    <style name="mode">
        <item name="android:background">@drawable/username_bg_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:text">"Light Theme"</item>
    </style>
    <style name="img_mode">
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/light_mode</item>
    </style>
    <style name="AlertDialogCustomStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>