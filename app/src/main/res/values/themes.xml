<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiniProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/Royal_Blue</item>
    </style>

    <style name="BackgroundColor"><item name="android:background">@color/Light_Apricot</item></style>
    <style name="TextColor"><item name="android:textColor">@color/black</item></style>
    <style name="WhiteColor"><item name="android:backgroundTint">@color/white</item></style>
    <style name="ButtonBackground"><item name="android:background">@drawable/msg_input</item></style>
    <style name="LinkColor"><item name="android:textColor">@color/Purple</item></style>
    <style name="ForumTheme"><item name="android:background">@color/Orange</item></style>
    <style name="IconColor"><item name="android:tint">@color/black</item></style>
    <style name="MessageInputBackground"><item name="android:background">@drawable/msg_input</item>
        <item name="android:src">@drawable/send</item></style>
    <style name="search_msg"><item name="android:background">@drawable/msg_input</item>
        <item name="android:tint">@color/Slate_Gray</item></style>
    <style name="Profile">
        <item name="android:background">@drawable/username_bg</item>
        <item name="android:textColor">@color/Charcoal</item>
        <item name="android:textColorHint">@color/Charcoal</item>
    </style>
    <style name="write">
        <item name="android:backgroundTint">@color/Silver</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="camera">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:src">@drawable/changedp</item>
    </style>
    <style name="dp">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="PasswordField">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SearchBackground">
        <item name="android:background">@drawable/search_input</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="mode">
        <item name="android:background">@drawable/username_bg</item>
        <item name="android:textColor">@color/Charcoal</item>
        <item name="android:textColorHint">@color/Charcoal</item>
        <item name="android:text">"Dark Theme"</item>
    </style>
    <style name="img_mode">
        <item name="android:tint">@color/black</item>
        <item name="android:src">@drawable/dark_mode</item>
    </style>
    <style name="AlertDialogCustomStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/Royal_Blue</item>
    </style>


    <style name="Theme.MiniProject" parent="Base.Theme.MiniProject" />
</resources>